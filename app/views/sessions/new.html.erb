<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h1 class="title is-2">LogIn</h1>
          <%= form_tag '/login' do %>
            <div class="field">
            <div class="control">
              <h1 class="title is-6 mb-2">Username</h1>
              <%= text_field_tag :name,"",autofocus: true, class: 'input is-normal' %>
            </div>
            </div>
            <div class="field">
            <div class="control">
                <%= submit_tag "LogIn", class:"button is-success is-medium" %>
            </div>
            </div>
        <% end %> 
      </div>
   </div>  
  </div>
</div>
