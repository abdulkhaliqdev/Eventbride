<!DOCTYPE html>
<html>
  <head>
    <title>Eventbride</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if  flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if  flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar has-background-link-light" role="navigation" aria-label="main navigation">
      <div class="container">
      <div class="navbar-brand">
        <%= link_to root_path, class: 'navbar-item' do %>
          <h1 class="title is-5">Eventbride</h1>
        <% end %>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
            <% if user_signed_in? %>
              <div class="control mr-3 mb-2">
                <h2 class="title is-4 has-text-info">
                  Welcome <%= current_user.name%> !
                </h2>
              </div>
              <p class="control mr-3">
                <%= link_to 'Dashboard', current_user, class: "button is-primary" %>
              </p>
              <p class="control">
                <%= link_to 'Log Out', '/logout', class: "button is-danger" %>
              </p>
            <% else %>
              <p class="control" style="margin-right:3px">
                <%= link_to 'Sign In', '/login', class: "button is-primary" %>
              </p>
              <p class="control">
                <%= link_to 'Sign Up', '/signup', class: "button is-primary" %>
              </p>
            <% end %>
            </div>
          </div>
        </div>
      </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
